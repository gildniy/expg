# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# Supabase Database URLs
DATABASE_URL="postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[YOUR-REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[YOUR-REGION].pooler.supabase.com:5432/postgres"

# Test Database URLs (only needed if you want to run tests against a separate test database)
TEST_DATABASE_URL="postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[YOUR-REGION].pooler.supabase.com:6543/postgres_test?pgbouncer=true"
TEST_DIRECT_URL="postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[YOUR-REGION].pooler.supabase.com:5432/postgres_test"

# =================================================================
# APPLICATION SETTINGS
# =================================================================
NODE_ENV=development  # Options: development, production, test
PORT=3000             # Port on which the API server will run

# =================================================================
# AUTHENTICATION
# =================================================================
# JWT Configuration
JWT_SECRET=your_jwt_secret_key        # Secret key for signing JWTs (change this!)
JWT_EXPIRATION=24h# JWT token expiration time

# =================================================================
# EXTERNAL SERVICES
# =================================================================
# EZPG Service API Configuration
EZPG_API_KEY=your_ezpg_api_key      # API key for the EZPG payment gateway
EZPG_API_URL=https://api.ez-pg.net  # Base URL for EZPG API endpoints

# =================================================================
# API SECURITY
# =================================================================
# API Key Authentication
API_KEY_HEADER=X-API-Key           # Header name for API key
API_KEY=your_api_key_here          # API key value for authenticated clients

# Rate Limiting
RATE_LIMIT_TTL=60000               # Time window in milliseconds (1 minute)
RATE_LIMIT_MAX=100                 # Maximum requests per time window

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com  # Comma-separated list of allowed origins
CORS_CREDENTIALS=true              # Whether to allow credentials in CORS requests

# =================================================================
# TEST ENVIRONMENT OVERRIDES
# =================================================================
# These values are used when NODE_ENV=test
TEST_PORT=3001
TEST_JWT_SECRET=test_jwt_secret_key
TEST_JWT_EXPIRATION=1h
TEST_EZPG_API_KEY=test_ezpg_api_key
TEST_EZPG_API_URL=https://ez-pg.net/test

# Environment variables for EZPG Monorepo

# Node environment
NODE_ENV=development

# API Server
API_PORT=3001
API_HOST=localhost

# Client Server (Next.js)
CLIENT_PORT=3000
CLIENT_HOST=localhost

# Database Connection URL (for both TypeORM and Prisma)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ezpg_db

# For production with Supabase, use format:
# DATABASE_URL=postgres://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
# DIRECT_URL=postgres://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=3600

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# ORM Configuration
# Set to 'true' to use Prisma, 'false' to use TypeORM
USE_PRISMA=true

# API URL for client-side API calls
# In development, uses the API proxy in next.config.js
NEXT_PUBLIC_API_URL=http://localhost:3001/api 